<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]OptiMind Solutions</title>
    <link rel="icon" type="image/png" href="~/images/logo.png" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
   <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!--<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />-->
    <!--<link rel="stylesheet" href="~/css/OptiMindSolutions.styles.css" asp-append-version="true" />-->
    <style>
        /* GENERAL RESET */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Arial', sans-serif;
        }

        body {
            background-color: #f4f8fb;
            color: #333;
            line-height: 1.6;
            font-size: 16px;
        }

        /* HEADER */
        header {
            background-color: #004080;
            color: white;
            padding: 1rem 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            header .logo {
                font-size: 1.5rem;
                font-weight: bold;
            }

            header nav ul {
                list-style: none;
                display: flex;
                gap: 1rem;
            }

                header nav ul li a {
                    color: white;
                    text-decoration: none;
                    font-weight: 500;
                }

                    header nav ul li a:hover {
                        text-decoration: underline;
                    }

        .hero-background {
            background-image: url('/images/header.png');
            background-size: cover;
            background-position: center;
            position: relative;
            color: white;
        }

            .hero-background::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.6); /* Superposición oscura */
                z-index: 1;
            }

        .hero-content {
            position: relative;
            z-index: 2;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7); /* Sombra para mejorar visibilidad */
        }
        /* BUTTONS */
        button, .btn {
            display: inline-block;
            padding: 0.75rem 1.5rem;
            font-size: 1rem;
            font-weight: bold;
            color: white;
            background-color: #0066cc;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

            button:hover, .btn:hover {
                background-color: #0056a3;
                transform: translateY(-2px);
            }

            button:active, .btn:active {
                background-color: #004080;
                transform: translateY(0);
            }

            button.secondary, .btn.secondary {
                background-color: #e6e6e6;
                color: #333;
            }

                button.secondary:hover, .btn.secondary:hover {
                    background-color: #d4d4d4;
                }

        /* LINKS */
        a {
            color: #0066cc;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }

        /* FORM */
        form {
            max-width: 600px;
            margin: 2rem auto;
            padding: 2rem;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

            form label {
                display: block;
                margin-bottom: 0.5rem;
                font-weight: bold;
            }

            form input, form textarea, form select {
                width: 100%;
                padding: 0.75rem;
                margin-bottom: 1rem;
                border: 1px solid #ccc;
                border-radius: 5px;
                font-size: 1rem;
            }

                form input:focus, form textarea:focus, form select:focus {
                    border-color: #0066cc;
                    outline: none;
                }

            form .form-group {
                margin-bottom: 1.5rem;
            }

            form button {
                width: 100%;
            }

        /* TABLES */
        table {
            width: 100%;
            border-collapse: collapse;
            margin: 2rem 0;
            font-size: 1rem;
            text-align: left;
        }

            table th, table td {
                padding: 1rem;
                border: 1px solid #ddd;
            }

            table th {
                background-color: #0066cc;
                color: white;
                font-weight: bold;
            }

            table tr:nth-child(even) {
                background-color: #f9f9f9;
            }

            table tr:hover {
                background-color: #e6f7ff;
            }

        /* CARDS */
        .card {
            background-color: white;
            border: 1px solid #ddd;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            margin: 1rem 0;
        }

            .card .card-header {
                background-color: #004080;
                color: white;
                padding: 1rem;
                font-weight: bold;
                text-align: center;
            }

            .card .card-body {
                padding: 1.5rem;
            }

            .card .card-footer {
                padding: 1rem;
                background-color: #f4f8fb;
                text-align: right;
            }

        /* FOOTER */
        footer {
            background-color: #004080;
            color: white;
            text-align: center;
            padding: 1rem 0;
            margin-top: 2rem;
        }

        /* RESPONSIVE DESIGN */
        @@media (max-width: 768px) {
            header

        {
            flex-direction: column;
            text-align: center;
        }

        header nav ul {
            flex-direction: column;
            gap: 0.5rem;
        }

        form {
            padding: 1rem;
        }

        }


        /* CSS personalizado para OptiMindSolutions */

        /* Navegación */
        #navbar {
            background-color: #f8f9fa; /* Color de fondo claro para el navbar */
            border-bottom: 1px solid #e3e3e3;
        }

            #navbar .navbar-brand {
                font-weight: bold;
                color: #343a40;
                font-size: 1.5rem;
            }

            #navbar .nav-link {
                color: #343a40 !important; /* Asegura que el texto del menú esté en un gris oscuro */
                transition: color 0.3s ease;
            }

                #navbar .nav-link:hover {
                    color: #007bff !important; /* Color de hover en azul */
                }

        /* Pie de página */
        footer {
            background-color: #f1f1f1;
            color: #6c757d;
        }

            footer a {
                color: #007bff;
            }

                footer a:hover {
                    text-decoration: underline;
                    color: #0056b3;
                }

        /* Estilo general */
        body {
            font-family: Arial, sans-serif;
            color: #343a40;
        }

        h2, h3, h4, h5, h6 {
            font-weight: bold;
            color: #343a40;
        }

        h1 {
            color: white;
        }

        p {
            font-size: 1rem;
            line-height: 1.6;
        }

        .btn-lg {
            font-size: 1.2rem;
            padding: 0.75rem 1.5rem;
        }

        .card-img-top {
            height: 200px; /* Ajusta esta altura según lo que necesites */
            width: 100%;
            object-fit: cover; /* Asegura que la imagen cubra todo el espacio sin distorsionarse */
        }

        /* Estilo del enlace de collapse */
        .collapse-btn {
            background: none;
            border: none;
            color: #007bff; /* Color para el texto */
            font-size: 1rem; /* Tamaño del texto */
            font-weight: 600; /* Peso del texto */
            text-decoration: none; /* Sin subrayado por defecto */
            cursor: pointer;
            padding: 0;
            transition: color 0.3s ease, text-decoration 0.3s ease;
        }

        /* Estilo de la flecha */
        .small-arrow {
            margin-right: 5px; /* Un pequeño margen entre la flecha y el texto */
            font-size: 1.2rem; /* Tamaño de la flecha */
            transition: transform 0.3s ease; /* Animación suave para la flecha */
            text-decoration: none; /* Asegúrate de que la flecha no esté subrayada */
        }

        /* Efecto de hover para el texto */
        .collapse-btn:hover .small-arrow {
            text-decoration: none; /* Sin subrayado para la flecha cuando el ratón pasa por encima */
        }

        .collapse-btn:hover {
            color: #0056b3; /* Cambia el color al pasar el ratón sobre el texto */
        }

        /* Cambiar dirección de la flecha cuando se expande */
        .collapse-btn.collapsed .small-arrow {
            transform: rotate(180deg); /* Rota la flecha */
        }

        /* Cambio de texto y animación de la flecha */
        .collapse-btn:active .small-arrow {
            transform: scale(0.9); /* Efecto de pulsación en la flecha */
        }
        /* Estilos generales para la página de ubicación */
        .map-container {
            max-width: 90%; /* Ancho máximo del contenedor */
            width: 800px; /* Ancho fijo del contenedor */
            text-align: center; /* Centrar texto */
            background-color: #ffffff;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1); /* Sombra para darle un toque elegante */
            padding: 20px;
            border-radius: 10px; /* Bordes redondeados */
            margin: 0 auto; /* Centrar horizontalmente */
        }

        iframe {
            width: 100%; /* Hacer que ocupe el 100% del contenedor */
            height: 500px; /* Ajustar altura del mapa */
            border: none;
            border-radius: 10px; /* Bordes redondeados */
        }


        .whatsapp-button {
            display: inline-block;
            width: 60px;
            height: 60px;
            background-color: #25D366; /* Color oficial de WhatsApp */
            color: white;
            border-radius: 50%; /* Forma circular */
            text-align: center;
            line-height: 60px; /* Centra el ícono verticalmente */
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2);
            transition: transform 0.2s ease, box-shadow 0.2s ease;
            text-decoration: none;
            font-size: 24px;
        }

            .whatsapp-button:hover {
                transform: scale(1.1);
                box-shadow: 0px 6px 8px rgba(0, 0, 0, 0.3);
                color: white;
            }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom box-shadow mb-3" id="navbar">
            <div class="container">
                <!-- Logo y nombre de la empresa -->
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <img src="~/images/logo.png" alt="OptiMindSolutions Logo" class="d-inline-block align-top" style="height: 40px; margin-right: 10px;" />
                    OptiMindSolutions
                </a>
                <!-- Botón de navegación (para móviles) -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- Menú de navegación -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/About">Sobre Nosotros</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Services">Servicios</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/FAQ">Preguntas Frecuentes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Contact">Contacto/Reserva</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Pie de página -->
    <footer class="bg-light text-center py-4">
        <div class="container">
            <p>&copy; 2024 OptiMindSolutions. Todos los derechos reservados.</p>
            <p><a href="/Privacy">Política de privacidad</a> | <a href="/Terms">Términos y condiciones</a></p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>